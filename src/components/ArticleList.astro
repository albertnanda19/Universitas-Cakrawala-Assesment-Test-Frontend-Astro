---
import ArticleCard from "./ArticleCard.astro";

export interface Props {
  articles: any[];
  hrefBase?: string;
  showExcerpt?: boolean;
  maxRender?: number;
}

const {
  articles = [],
  hrefBase = "/",
  showExcerpt = false,
  maxRender = 50,
} = Astro.props as Props;

const safeArticles =
  Array.isArray(articles) && articles.length > 0
    ? articles.slice(0, Math.max(0, maxRender))
    : [];
---

<div class="p-4 grid gap-4 md:grid-cols-2 lg:grid-cols-3">
  {safeArticles.map((article) => (
    <ArticleCard article={article} hrefBase={hrefBase} showExcerpt={showExcerpt} />
  ))}
  {safeArticles.length === 0 && <p class="text-gray-600">No articles available.</p>}
</div>


