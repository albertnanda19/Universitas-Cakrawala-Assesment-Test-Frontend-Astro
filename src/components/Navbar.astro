---
export interface Props {
  categories?: Array<{ Name: string; Slug: string }>;
}
const { categories = [] } = Astro.props as Props;
---

<header
  class="sticky top-0 z-40 bg-white/80 backdrop-blur border-b border-gray-200"
>
  <div class="mx-auto max-w-6xl px-4 py-3 flex items-center justify-between">
    <a href="/" class="font-semibold text-lg tracking-wide hover:opacity-80">
      Universitas Cakrawala
    </a>
    <nav class="flex items-center gap-3">
      <a
        href="/"
        class="px-3 py-2 rounded hover:bg-gray-100 transition text-sm"
        aria-label="Home"
      >
        Home
      </a>
      <a
        href="/kategori"
        class="px-3 py-2 rounded hover:bg-gray-100 transition text-sm"
        aria-label="Categories"
      >
        Categories
      </a>
    </nav>
  </div>
</header>
